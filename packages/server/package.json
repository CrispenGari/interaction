{
  "name": "@interaction/server",
  "version": "1.0.0",
  "main": "server.ts",
  "description": "backend server for the chat application using typescript",
  "author": "@crispengari",
  "license": "MIT",
  "keywords": [
    "None"
  ],
  "scripts": {
